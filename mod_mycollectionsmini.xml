				<field name="moduleclass" type="text" default="" label="MOD_MYCOLLECTIONSMINI_PARAM_CLASS_LABEL" description="MOD_MYCOLLECTIONSMINI_PARAM_CLASS_DESC" />
				<field name="limit" type="text" default="5" label="MOD_MYCOLLECTIONSMINI_PARAM_LIMIT_LABEL" description="MOD_MYCOLLECTIONSMINI_PARAM_LIMIT_DESC" member_dashboard="1" />
				<field name="include_myposts" type="list" default="1" label="MOD_MYCOLLECTIONSMINI_PARAM_MYPOSTS_LABEL" description="MOD_MYCOLLECTIONSMINI_PARAM_MYPOSTS_DESC">
