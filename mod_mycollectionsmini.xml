					<option value="0">JNO</option>
				</field>				
				<field name="button_show_add" type="list" default="1" label="MOD_MYCOLLECTIONSMINI_PARAM_SHOWADD_LABEL" description="MOD_MYCOLLECTIONSMINI_PARAM_SHOWADD_DESC">
