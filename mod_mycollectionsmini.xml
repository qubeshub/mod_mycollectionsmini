				<field name="include_mycollections" type="list" default="1" label="MOD_MYCOLLECTIONSMINI_PARAM_MYCOLLECTIONS_LABEL" description="MOD_MYCOLLECTIONSMINI_PARAM_MYCOLLECTIONS_DESC">
